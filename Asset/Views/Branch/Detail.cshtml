@model Asset.ViewModel.BranchVM.BranchIndex;
@{
    ViewData["Title"] = Model.Name;
}

<div class="container mono-slim">
    <div class="header clearfix detailHeading">
        <h2 class="text-muted text-center">Branch Information</h2>
    </div>
    <div class="jumbotron mono">
        <div class="row">
            <img src="@Model.ImageUrl" style="width:100%;height:550px; background-size:100%;" />
        </div>
        <div class="row mr-2" style="margin-top:25px;">
            <div class="col-md-6" style="border:1px solid orange;">
                <div style="padding:0px 20px;">
                    <h2 class="text-center mt-2">@Model.Name</h2>
                    <div class="branchContact">
                      
                        <div class="mb-3" style="font-size:16px; letter-spacing:1.3px;" id="branchAddress"><b>Address</b>: @Model.Address</div>
                        <div class="mb-3" style="font-size: 16px; letter-spacing: 1.1px;" id="branchTel"><b>Telephone</b>: @Model.Telephone</div>
                    </div>
                    <div style="font-size:17px; letter-spacing:1.1px;" id="branchDescription">
                        <p class="caption">@Model.Description</p>
                    </div>

                @*    <div id="branchHours">
                        <ul>
                            @foreach (var day in @Model.HoursOpen)
                            {
                                <li>@day</li>
                            }
                        </ul>
                    </div>*@
                    <h4 class="text-center text-muted mb-3">Visitors Acceptance Time and Date</h4>
                    <ul style="list-style:none;">
                        @foreach (var item in Model.LibraryTime)
                        {
                            <li>@item</li>
                        }
                    </ul>
                
                </div>
            </div>
            <div class="col-md-6 detailInfo"  style="border:2px solid orangered; padding:20px;">
                <table>
                    <tr>
                        <td class="itemLabel">Date Opened: </td>
                        <td class="itemValue">@Model.OpenDate</td>
                    </tr>
                 
                    <tr>
                        <td class="itemLabel">Number of Assets: </td>
                        <td class="itemValue">@Model.AssetNumber</td>
                    </tr>
                
                </table>
            </div>
        </div>
    </div>
</div>