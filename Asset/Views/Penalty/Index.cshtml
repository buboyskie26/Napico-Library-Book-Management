@model Asset.ViewModel.PenaltyVM.PenaltyListIndex
@{
    ViewData["Title"] = "Index";
}

<div class="col-md-10 offset-md-1 mono-slim">
    <h4 class="text-center">My Penalties</h4>
    <table class="table table-hover table-bordered">
        <thead class="bg-dark">
            <tr class="text-center">
                <td>Book Name</td>
                <td>Penalty Amount</td>
                <td>Date of Penalty</td>
                <td>Patron Name</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.PenaltyList)
            {
                <tr class="text-center">

                    <td>@item.AssetName</td>
                    <td>@item.AmountPenalty</td>
                    <td>@item.PenaltyDate</td>
                    <td>@item.Username </td>
                </tr>
            }
        </tbody>
    </table>
</div>

